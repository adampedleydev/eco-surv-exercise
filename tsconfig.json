{
  "compilerOptions": {
    "lib": ["dom", "es2015"],
    "outDir": "./lib/cjs/",
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": true,
    "moduleResolution": "node",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "types": ["node", "jest", "testing-library/jest-dom"]
  },
  "include": [
    "src/**/*",
    "vite.config.cjs"
  ],
  "exclude": ["node_modules", "dist", "lib"]
}
